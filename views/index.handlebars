<div id="home">
  <div class="container">
    <div class="row">
      <div class="col-8 offset-2">
        <h3 style="margin-top:50px">Create New Traveller</h3>
        <form class="clearfix mb-4" action="POST">
          <div class="form-group">
            <label for="example-text">Traveller:</label>
            <input type="text" id="traveller-name" class="form-control" aria-describedby="example-text"
              placeholder="Traveller">
          </div>
          <div class="form-group">
            <label for="example-description">Home Town</label>
            <input type="text" class="form-control" id="home-town" aria-describedby="example-description"
              placeholder="Home Town"></textarea>
          </div>
          <button id="submit-user" class="btn btn-primary float-right">Submit</button>
        </form>
        <form class="clearfix mb-4" action="POST">
          <div class="form-group">
            <label for="example-text">Departure City:</label>
            <input type="text" id="example-text" class="form-control" aria-describedby="example-text"
              placeholder="Departure City">
          </div>
          <div class="form-group">
            <label for="example-description">Arrival City</label>
            <input type="text" class="form-control" id="example-description" aria-describedby="example-description"
              placeholder="Arrival City"></textarea>
          </div>
          <div class="form-group">
            <label for="category">Select Traveller:</label>
            <select class="selectpicker custom-select" id="traveller">
              <option></option>
              {{#each user}}
              <option value="{{this.id}}">{{this.userName}}</option>
              {{/each}}

            </select>
          
          <button id="submit" class="btn btn-primary float-right">Submit</button>
        </form>
       
        <h3 style="margin-top:50px">Trips taken:</h3>
        <div id="example-list" class="container">
          {{#each destination}}
          <div data-id="{{this.id}}" class="row">
            <div class="col-4">
              <p>Departure City: {{this.departureCity}}</p>
              <p>Arrival City: {{this.arrivalCity}}</p>
              <p>Trip Distance: {{this.tripDistance}}</p>
            </div>
            <div class="col-4">
              <p>Trip made by:</p>
              <p>{{this.User.userName}}</p>
            </div>
            <div class="col-4">
              <a href="/example/{{this.id}}"><button type="button" class="btn btn-primary float-right">View Trip</button></a>
            </div>
          </div>
          {{/each}} 

        </div>
      </div>
    </div>
  </div>

  <script type="text/javascript" src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.2.1/jquery.min.js"></script>
