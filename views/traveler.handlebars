<div class="container">

    <div class="row">
        <div class="col-6">
            <div id="user">
                <h1 id="profileTitle">Profile Name: {{user.userName}}</h1>
                <div id="sideBarInfo">
                    <h2 id="sideBarTitle">Profile Info: </h2>
                </div>
                <div id="sideBarInfo">
                    <h4>Hometown:</h4>
                    <p>{{user.homeTown}}</p>
                </div>
                <div id="sideBarInfo">
                    <h4>Favorite Activities:</h4>
                    <p>{{user.favActivity}}</p>
                </div>
                <div id="sideBarInfo">
                    <h4>Favorite Destinations:</h4>
                    <p>{{user.favDestination}}</p>
                </div>
                <h4 id="miles" value="{{user.milesTraveled}}">Miles Traveled: {{user.milesTraveled}}</h4>
            </div>
            <div id="start-trip-form">
                <form action="POST" style="margin-bottom:50px">
                    <div class="form-row">
                        <div class="col">
                            <label>Departure City:</label>
                            <input type="text" id="departure" class="form-control" placeholder="Departure City">
                        </div>
                        <div class="col">
                            <label for="example-description">Arrival City</label>
                            <input type="text" class="form-control" id="arrival" placeholder="Arrival City"></textarea>
                        </div>
                    </div>
                    <button id="submit" value="{{user.id}}" class="btn btn-primary float-right">Start Trip</button>
                </form>
            </div>


            <div id="trip-log">
                <p id="depart-text"></p>
                <p id="arrive-text"></p>
                <p id="distance-text"></p>
                <p id="trip-type-text"></p>
                <form>
                    <div class="form-row">
                        <div class="col-4" id="activity-input-div"></div>
                        <div class="col-4" id="activity-des-div"></div>
                        <div class="col-4" id="activity-button-div"></div>
                    </div>
                    <table>
                        <tr class="row">
                            <tbody id="activities">
                            </tbody>
                        </tr>
                    </table>
                    <div id="finish-trip"></div>
                </form>
            </div>
        </div>
        <div class="col-6">
            <div id="example-list" class="container">
                {{#each destination}}
                <div data-id="{{this.id}}" class="row trip">
                    <div class="col-4">
                        <p>Departure City: {{this.departureCity}}</p>
                        <p>Arrival City: {{this.arrivalCity}}</p>
                        <p>Trip Distance: {{this.tripDistance}}</p>
                    </div>
                    <div class="col-4">
                        <table>
                            <tr class="row">
                                <th>
                                    Things done:
                                </th>
                                <tbody>
                                    {{#each activities}}
                                    <tr class="row">
                                        <td>{{this.activityName}}</td>
                                    </tr>
                                    {{/each}}
                            </tr>
                            </tbody>
                        </table>
                    </div>
                    <div class="col-4">
                        <a href="/trip/{{this.id}}"><button type="button" class="btn btn-primary float-right">View
                                Trip</button></a>
                    </div>
                </div>
                {{/each}}

            </div>
        </div>
    </div>


    <script type="text/javascript" src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.2.1/jquery.min.js"></script>
    <script src="/js/traveler.js"></script>
    </body>

    </html>