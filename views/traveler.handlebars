<div class="container">
    <h1>{{user.userName}}</h1>
    <div class="row">
        <div class="col-6">
            <form action="POST" style="margin-bottom:50px" id="start-trip-form">
                <div class="form-row">
                    <div class="col">
                        <label>Departure City:</label>
                        <input type="text" id="departure" class="form-control" placeholder="Departure City">
                    </div>
                    <div class="col">
                        <label for="example-description">Arrival City</label>
                        <input type="text" class="form-control" id="arrival" placeholder="Arrival City"></textarea>
                    </div>
                </div>
                <div class="form-row">
                    <select class="selectpicker custom-select form-control" id="trip-type">
                        <option></option>
                        <option>Beach</option>
                        <option>Skiing</option>
                        <option>Camping</option>
                        <option>Cultural</option>


                    </select>
                </div>
                <button id="submit" value="{{user.id}}" class="btn btn-primary float-right">Start Trip</button>
            </form>

            <div id="trip-log">
                <p id="depart-text"></p>
                <p id="arrive-text"></p>
                <p id="distance-text"></p>
                <p id="trip-type-text"></p>
                <form>
                    <div class="form-row">
                        <div class="col-4" id="activity-input-div"></div>
                        <div class="col-4" id="activity-des-div"></div>
                        <div class="col-4" id="activity-button-div"></div>
                    </div>
                    <div id="activities"></div>
                    <div id="finish-trip"></div>
                </form>
            </div>
        </div>
        <div class="col-6">
            <div id="example-list" class="container">
                {{#each destination}}
                <div data-id="{{this.id}}" class="row">
                    <div class="col-4">
                        <p>Departure City: {{this.departureCity}}</p>
                        <p>Arrival City: {{this.arrivalCity}}</p>
                        <p>Trip Distance: {{this.tripDistance}}</p>
                    </div>
                    <div class="col-4">
                        <p>Stuff did:</p>
                        <ul>
                            {{#each activities}}
                            <li>{{this.activityName}}</li>
                            {{/each}}
                        </ul>
                    </div>
                    <div class="col-4">
                        <a href="/trip/{{this.id}}"><button type="button" class="btn btn-primary float-right">View
                                Trip</button></a>
                    </div>
                </div>
                {{/each}}
            </div>
        </div>
    </div>
</div>


<script type="text/javascript" src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.2.1/jquery.min.js"></script>
<script src="/js/traveler.js"></script>